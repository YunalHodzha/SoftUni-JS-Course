        <main>

            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">
                        <div class="card_datails">

                            <h1>Name: {{item.name}}</h1>
                            <h3>Created by an author: {{ownerName}}</h3>
                            <div class="card_character">
                                <p class="card-species">Species: {{item.species}}</p>
                                <p class="card-skin">Skin colour: {{item.skinColor}}</p>
                                <p class="card-eye">Eye Colour: {{item.eyeColor}}</p>
                            </div>

                            <p class="disc">Description: {{item.description}}.</p>

                            <!-- If there is no registered user, do not display buttons-->

                            {{#if isUser}}
                            <div class="social-btn">
                                <!-- Only for registered user and author of the post -->
                                {{#if isOwner}}
                                <a href="/items/edit/{{item._id}}" class="edit-btn">Edit</a>
                                <a href="/items/delete/{{item._id}}" class="del-btn">Delete</a>
                                {{else}}
                                {{#if hasVoted}} 
                                <!-- logged in user who has already voted-->
                                <p class="thanks-for-vote">Thanks For Voting</p>
                                {{else}}
                                <!-- logged in users, who have not yet voted-->
                                <a href="/items/details/{{item._id}}/vote" class="vote-up">Vote</a>
                                {{/if}}
                                {{/if}}
                            </div>
                            {{/if}}
                        </div>
                    </div>
                    <div class="card_right">
                        <img src="{{item.image}}"
                            alt="image">
                    </div>
                </div>

            </section>

            <section id="votes">
                <div class="vote-info">
                    <div class="card_left">
                        <div class="card_datails">
                            <h1>Votes</h1>
                            <div class="card_vote">
                                <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                                <p class="PV">Total rating of votes: {{item.votes.length}}</p>
                            </div>

                            {{#if votedUserEmails}}
                            <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                             <p class="disc">People who voted for the post - {{votedUserEmails}}</p>
                            {{else}}
                            <!-- If not display: -->
                            <p class="disc">People who voted for the post - No one has voted yet.</p>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </section>

        </main>
